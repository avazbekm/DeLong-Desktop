<Page x:Class="DeLong_Desktop.Pages.Input.InputPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeLong_Desktop.Pages.Input"
      mc:Ignorable="d"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InputPage">

    <Grid Background="#334257">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="spCategory" Grid.Column="0" Margin="10 10 0 10">
            <DataGrid x:Name="categoryDataGrid" Margin="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutoGenerateColumns="False" CanUserAddRows="False" Background="#548CA8" Foreground="Black">
                <DataGrid.Columns>
                    <!-- Radiobutton ustuni -->
                    <DataGridTemplateColumn x:Name="radioColumn" Header="🔲" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- Radiobutton -->
                                    <RadioButton x:Name="rbtnCategory" GroupName="CategoryGroup" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="rbtnCategory_Checked" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Kategoriya ustuni -->
                    <DataGridTextColumn Header="Kategoriya" Binding="{Binding Category}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="18" />
                                <Setter Property="Foreground" Value="Snow" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Column="1" Margin="0 10 0 10">
            <DataGrid x:Name="productDataGrid" 
              AutoGenerateColumns="False" 
              CanUserAddRows="False" 
              Background="#548CA8" 
              Foreground="Black"
              RowHeight="40"
              ScrollViewer.HorizontalScrollBarVisibility="Auto"
              ScrollViewer.VerticalScrollBarVisibility="Auto"
              EnableRowVirtualization="True"
              VirtualizingStackPanel.IsVirtualizing="True">
                <DataGrid.Columns>
                    <!-- Radiobutton ustuni -->
                    <DataGridTemplateColumn Header="🔲" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <RadioButton GroupName="ProductGroup" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Mahsulot ustuni -->
                    <DataGridTextColumn Header="Mahsulotlar" Binding="{Binding Product}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="18" />
                                <Setter Property="Foreground" Value="Snow" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel x:Name="spPrice" Grid.Column="2" Margin="0 10">
            <StackPanel Orientation="Vertical">
                <!-- Mahsulot nomi Label -->
                <Label x:Name="lbProduct" Content="Mahsulot nomi:" FontSize="18" Foreground="Snow" HorizontalAlignment="Left"/>

                <!-- Chiziq (ostki chegara) uchun Border -->
                <Border BorderThickness="0,0,0,1" BorderBrush="Snow" Margin="0,0,0,5" />

                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tax Rate -->
                    <Label Content="Tax rate in % *" FontSize="16" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" />
                    <TextBox Text="20.00" FontSize="16" BorderThickness="0,0,0,1" BorderBrush="Gray" Grid.Row="0" Grid.Column="1"
                 VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

                    <!-- Actual Price -->
                    <Label Content="Actual price *" FontSize="16" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" />
                    <TextBox Text="100.00" FontSize="16" BorderThickness="0,0,0,1" BorderBrush="Gray" Grid.Row="1" Grid.Column="1"
                 VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

                    <!-- Granted Rebate -->
                    <Label Content="Granted rebate" FontSize="16" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" />
                    <TextBox Text="20.00" FontSize="16" BorderThickness="0,0,0,1" BorderBrush="Gray" Grid.Row="2" Grid.Column="1"
                 VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

                    <!-- Shipping/Item -->
                    <Label Content="Shipping/item" FontSize="16" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" />
                    <TextBox Text="5.00" FontSize="16" BorderThickness="0,0,0,1" BorderBrush="Gray" Grid.Row="3" Grid.Column="1"
                 VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                </Grid>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
