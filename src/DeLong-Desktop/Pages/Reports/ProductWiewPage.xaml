<Page x:Class="DeLong_Desktop.Pages.Reports.ProductWiewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      Background="#FF8C00">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="Eng ko‘p sotilgan mahsulotlar" FontSize="20" 
                           FontWeight="Bold" Foreground="Black" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <lvc:CartesianChart x:Name="ProductChart" Height="300" Width="400">
                    <lvc:CartesianChart.Series>
                        <lvc:ColumnSeries Values="{Binding ProductSales}" 
                                          DataLabels="True" Fill="Blue">
                            <lvc:ColumnSeries.ColumnPadding>10</lvc:ColumnSeries.ColumnPadding>
                        </lvc:ColumnSeries>
                    </lvc:CartesianChart.Series>

                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Labels="{Binding ProductNames}" Title="Mahsulotlar" Foreground="Black"/>
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Sotilgan soni" Foreground="Black" MinValue="0"/>
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </StackPanel>
        </Border>
    </Grid>
</Page>