<Page x:Class="DeLong_Desktop.Pages.Reports.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeLong_Desktop.Pages.Reports"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportPage">

    <Grid Background="#F5F7FA">
        <TextBlock Text="Reports" FontSize="18" FontWeight="Bold" Margin="20,20,0,0"/>

        <Border Margin="20,60,20,0" Padding="10" CornerRadius="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="&#x1F4E6; Product List" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="&#x1F4C1; Supplier List" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="&#x1F6D2; Customer List" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="&#x1F4C8; Sales Report" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="&#x1F4CB; Purchases Report" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="&#x1F4B8; Profit" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="&#x1F5C3; Stock Balance" Style="{StaticResource ReportButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
