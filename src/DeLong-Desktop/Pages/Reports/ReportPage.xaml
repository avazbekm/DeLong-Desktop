<Page x:Class="DeLong_Desktop.Pages.Reports.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeLong_Desktop.Pages.Reports"
      mc:Ignorable="d" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reports Page">

    <Grid Background="{DynamicResource PrimaryBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Sarlavha joyi -->
            <RowDefinition Height="Auto"/>
            <!-- Tugmalar joyi -->
            <RowDefinition Height="*"/>
            <!-- Bo‘sh joy -->
        </Grid.RowDefinitions>

        <!-- Sahifa sarlavhasi -->
        <TextBlock Text="Reports" FontSize="22" FontWeight="Bold" 
                   Foreground="{DynamicResource PrimaryTextColor}" 
                   Margin="20,10,0,10" Grid.Row="0"/>

        <!-- Hisobot tugmalari (o'zini avtomatik joylaydi) -->
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0,0,10" Grid.Row="1">
            <Button Content="📦 Mahsulotlar ro‘yxati" Style="{StaticResource MaterialDesignFlatButton}"
            Background="#6C5DD3" Foreground="White" Width="180" Height="40"
            Margin="5" Click="ProductList_Click"/>
            <Button Content="🚚 Yetkazib beruvchilar" Style="{StaticResource MaterialDesignFlatButton}"
            Background="#6C5DD3" Foreground="White" Width="180" Height="40"
            Margin="5" Click="SupplierList_Click"/>
            <Button Content="👥 Mijozlar ro‘yxati" Style="{StaticResource MaterialDesignFlatButton}"
            Background="#6C5DD3" Foreground="White" Width="180" Height="40"
            Margin="5" Click="CustomerList_Click"/>
            <Button Content="📊 Sotuv hisobotlari" Style="{StaticResource MaterialDesignFlatButton}"
            Background="#6C5DD3" Foreground="White" Width="180" Height="40"
            Margin="5" Click="SalesReport_Click"/>
            <Button Content="📋 Xaridlar hisobotlari" Style="{StaticResource MaterialDesignFlatButton}"
            Background="#6C5DD3" Foreground="White" Width="180" Height="40"
            Margin="5" Click="PurchasesReport_Click"/>
            <Button Content="💰 Foyda" Style="{StaticResource MaterialDesignFlatButton}"
            Background="#6C5DD3" Foreground="White" Width="120" Height="40"
            Margin="5" Click="Profit_Click"/>
            <Button Content="📦 Ombor qoldig‘i" Style="{StaticResource MaterialDesignFlatButton}"
            Background="#6C5DD3" Foreground="White" Width="180" Height="40"
            Margin="5" Click="StockBalance_Click"/>
        </WrapPanel>

    </Grid>
</Page>
