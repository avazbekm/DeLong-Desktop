<Page x:Class="DeLong_Desktop.Pages.AdditionalOperations.AdditionalOperationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeLong_Desktop.Pages.AdditionalOperations"
      mc:Ignorable="d" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Qo‘shimcha Amallar"
      Background="{DynamicResource PrimaryBackground}">
    <Page.Resources>
        <!-- DataGrid Column Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextColor}"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style TargetType="DataGridCell">
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextColor}"/>
        </Style>

        <!-- ComboBox Style -->
        <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextColor}"/>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="md:ButtonAssist.CornerRadius" Value="5"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
        </Style>

        <!-- TabItem Style -->
        <Style TargetType="TabItem">
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabBorder" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" 
                                CornerRadius="7" Margin="2,0">
                            <ContentPresenter x:Name="ContentSite" ContentSource="Header" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Tanlanganda -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#476072"/>
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="#476072"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <!-- Hover holatida -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#5A7A9A"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <!-- Agar fon oq bo‘lsa, Foreground qora bo‘lsin -->
                            <DataTrigger Binding="{Binding Background, ElementName=TabBorder}" Value="Transparent">
                                <Setter Property="Foreground" Value="Black"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Background, ElementName=TabBorder}" Value="White">
                                <Setter Property="Foreground" Value="Black"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabControl Style -->
        <Style TargetType="TabControl" BasedOn="{StaticResource MaterialDesignTabControl}">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackground}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Page.Resources>

    <Grid Margin="0,0,0,-29">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Sarlavha -->
        <Border Background="{DynamicResource SecondaryBackground}" CornerRadius="5" Margin="10">
            <TextBlock x:Name="tbtQoshimchaamallar" Text="Qo‘shimcha amallar" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource SecondaryTextColor}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Tab’lar -->
        <TabControl Grid.Row="1" Margin="5">
            <!-- Tab 1: Qarzni To‘lash -->
            <TabItem Margin="4,0,0,0">
                <TabItem.Header>
                    <TextBlock x:Name="tbtqarznitolash" Text="Qarzni to‘lash" Padding="10 0" FontSize="16" />
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="73*"/>
                        <ColumnDefinition Width="22*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="51*"/>
                        <ColumnDefinition Width="8*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="66.72"/>
                        <!-- Yangi Row qo‘shildi -->
                    </Grid.RowDefinitions>

                    <!-- Qidiruv qatori -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,5,0,5" Grid.ColumnSpan="2" Width="430">
                        <TextBox x:Name="tbSearchDebt" Padding="5 3" md:HintAssist.Hint="Qidiruv" Width="400" Margin="3 5" FontSize="16" Background="{DynamicResource SecondaryBackground}" md:TextFieldAssist.TextFieldCornerRadius="7" TextChanged="SearchDebt_TextChanged"/>
                        <md:PackIcon Kind="Magnify" Height="24" Width="24" Foreground="{DynamicResource SecondaryTextColor}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Qarzlar ro‘yxati -->
                    <DataGrid x:Name="debtDataGrid" Grid.Row="1" Margin="5,5,5,5" AutoGenerateColumns="False" CanUserAddRows="False" Background="{DynamicResource SecondaryBackground}" Foreground="{DynamicResource SecondaryTextColor}" Grid.ColumnSpan="5" SelectionChanged="DebtDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mijoz Nomi" IsReadOnly="True" Binding="{Binding CustomerName}" Width="250"/>
                            <DataGridTextColumn Header="Qarz Summasi" IsReadOnly="True" Binding="{Binding RemainingAmount, StringFormat=N2}" Width="150"/>
                            <DataGridTextColumn Header="To'lash muddat" IsReadOnly="True" Binding="{Binding DueDate, StringFormat=dd.MM.yyyy}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!-- Yangi Row: Jami qarz va to‘lov summalari -->
                    <Border Grid.Row="2" Grid.ColumnSpan="5" Background="{DynamicResource SecondaryBackground}"  Margin="5,5,5,5" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Jami qarz: " FontSize="16" FontWeight="Bold" Foreground="{DynamicResource SecondaryTextColor}" VerticalAlignment="Center" Margin="10,0,5,0"/>
                            <TextBlock Grid.Column="1" x:Name="tbTotalDebt" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource SecondaryTextColor}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Column="2" x:Name="tbCashPayment" md:HintAssist.Hint="Naqd" FontWeight="Bold" Width="100" Margin="5" FontSize="16" Background="{DynamicResource SecondaryBackground}" TextChanged="tbCashPayment_TextChanged"/>
                            <TextBox Grid.Column="3" x:Name="tbCardPayment" md:HintAssist.Hint="Plastik" FontWeight="Bold" Width="100" Margin="5" FontSize="16" Background="{DynamicResource SecondaryBackground}" TextChanged="tbCardPayment_TextChanged"/>
                            <TextBox Grid.Column="4" x:Name="tbDollarPayment" md:HintAssist.Hint="Dollar" FontWeight="Bold" Width="100" Margin="5" FontSize="16" Background="{DynamicResource SecondaryBackground}" TextChanged="tbDollarPayment_TextChanged"/>
                            <Button Grid.Column="5" Content="To‘lash" FontSize="16" Click="PayAllDebtsButton_Click" Width="80" Margin="5" Background="{DynamicResource SelectedBackground}"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab 2: Qaytgan Mahsulotlarni Qabul Qilish -->
            <TabItem Margin="0,0,0,-2">
                <TabItem.Header>
                    <TextBlock x:Name="tbtqaytganmahsulot" Text="Qaytgan mahsulotlar" FontSize="16" Foreground="{DynamicResource SecondaryTextColor}" FontWeight="SemiBold"/>
                </TabItem.Header>
                <Grid Background="Transparent" Margin="0,0,0,-98">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="681*"/>
                        <ColumnDefinition Width="109*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Qaytgan mahsulot qo‘shish uchun Grid -->
                    <Border CornerRadius="10" Background="{DynamicResource SelectedBackground}" Opacity="0.95" Margin="5,10,5,10" Padding="20" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- SaleId -->
                            <md:Card Grid.Row="0" Grid.Column="0" Margin="10" Padding="10" Background="{DynamicResource SecondaryBackground}" md:ElevationAssist.Elevation="Dp16">
                                <TextBox x:Name="tbSaleId" md:HintAssist.Hint="Chek ID" Width="220" Height="40" FontSize="16" 
             Foreground="{DynamicResource SecondaryTextColor}" Background="Transparent" BorderThickness="0" 
             VerticalContentAlignment="Center" Padding="5" md:HintAssist.HintOpacity="0.8" 
             TextChanged="tbSaleId_TextChanged" LostFocus="tbSaleId_LostFocus"/>
                            </md:Card>

                            <!-- Kimdan qaytyapti -->
                            <md:Card Grid.Row="0" Grid.Column="1" Margin="10" Padding="10" Background="{DynamicResource SecondaryBackground}" md:ElevationAssist.Elevation="Dp16">
                                <TextBox x:Name="tbReturnedFrom" md:HintAssist.Hint="Kimdan qaytyapti" Width="220" Height="40" FontSize="16" Foreground="{DynamicResource SecondaryTextColor}" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Padding="5" md:HintAssist.HintOpacity="0.8"/>
                            </md:Card>

                            <!-- ProductName (ComboBox) -->
                            <md:Card Grid.Row="1" Grid.Column="0" Margin="10" Padding="10" Background="{DynamicResource SecondaryBackground}" md:ElevationAssist.Elevation="Dp16">
                                <ComboBox x:Name="cbSalePriceProducts" md:HintAssist.Hint="Mahsulot tanlang" Width="220" Height="40" FontSize="16" Foreground="{DynamicResource SecondaryTextColor}" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Padding="5" md:HintAssist.HintOpacity="0.8">
                                    <!-- ComboBox elementlarining uslubi -->
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
                                            <!-- Kulrang fon -->
                                            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextColor}"/>
                                            <!-- Matn rangi saqlanadi -->
                                            <Setter Property="Padding" Value="5"/>
                                            <!-- Ichki bo‘shliq -->
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <!-- Chegara yo‘q -->
                                            <!-- Hover va tanlanganda rang o‘zgarishi uchun Trigger -->
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource SelectedBackground}"/>
                                                    <!-- Hoverda biroz och kulrang -->
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
                                                    <!-- Tanlanganda qoramtir kulrang -->
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                            </md:Card>

                            <!-- Quantity -->
                            <md:Card Grid.Row="1" Grid.Column="1" Margin="10" Padding="10" Background="{DynamicResource SecondaryBackground}" md:ElevationAssist.Elevation="Dp16">
                                <TextBox x:Name="tbReturnQuantity" md:HintAssist.Hint="Miqdor" Width="220" Height="40" FontSize="16" Foreground="{DynamicResource SecondaryTextColor}" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Padding="5" md:HintAssist.HintOpacity="0.8" TextChanged="tbReturnQuantity_TextChanged"/>
                            </md:Card>

                            <!-- UnitOfMeasure -->
                            <md:Card Grid.Row="2" Grid.Column="0" Margin="10" Padding="10" Background="{DynamicResource SecondaryBackground}" md:ElevationAssist.Elevation="Dp12">
                                <TextBox x:Name="tbUnitOfMeasure" md:HintAssist.Hint="O‘lchov birligi ( dona, kg, litr ... )" Width="220" Height="40" FontSize="16" Foreground="{DynamicResource SecondaryTextColor}" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Padding="5" md:HintAssist.HintOpacity="0.8"/>
                            </md:Card>

                            <!-- Summa -->
                            <md:Card Grid.Row="2" Grid.Column="1" Margin="10" Padding="10" Background="{DynamicResource SecondaryBackground}" md:ElevationAssist.Elevation="Dp12">
                                <TextBox x:Name="tbReturnAmount" md:HintAssist.Hint="Summa" Width="220" Height="40" FontSize="16" Foreground="{DynamicResource SecondaryTextColor}" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Padding="5" md:HintAssist.HintOpacity="0.8" TextChanged="tbReturnAmount_TextChanged"/>
                            </md:Card>

                            <!-- Izoh -->
                            <md:Card Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" Padding="10" Background="{DynamicResource SecondaryBackground}" md:ElevationAssist.Elevation="Dp12">
                                <TextBox x:Name="tbComment" md:HintAssist.Hint="Izoh" Width="460" Height="40" FontSize="16" Foreground="{DynamicResource SecondaryTextColor}" Background="Transparent" BorderThickness="0" VerticalContentAlignment="Center" Padding="5" md:HintAssist.HintOpacity="0.8"/>
                            </md:Card>

                            <!-- Tasdiqlash tugmasi -->
                            <Button x:Name="btnConfirmReturn" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="Tasdiqlash" Click="ConfirmReturnButton_Click" Width="220" Height="50" Margin="10" FontSize="16" Background="{DynamicResource SecondaryBackground}" Foreground="{DynamicResource SecondaryTextColor}" BorderBrush="{DynamicResource SelectedBorderColor}" BorderThickness="1" VerticalAlignment="Center" Padding="15" md:ButtonAssist.CornerRadius="10">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource SelectedBackground}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource SecondaryTextColor}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Tab 3: Omborlar O‘rtasida Provodka -->
            <TabItem Margin="0,0,2,0">
                <TabItem.Header>
                    <TextBlock x:Name="tbtomborlarprovodka" Text="Omborlar o‘rtasida provodka" Margin="10 0" FontSize="16"/>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="39*"/>
                        <ColumnDefinition Width="119*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto" MinHeight="158"/>
                    </Grid.RowDefinitions>

                    <!-- Provodka ro‘yxati -->
                    <DataGrid x:Name="transferDataGrid" Margin="5,5,5,5" AutoGenerateColumns="False" CanUserAddRows="False"
                              Background="{DynamicResource SecondaryBackground}" 
                              Foreground="{DynamicResource SecondaryTextColor}" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mahsulot Nomi" Binding="{Binding ProductName}" Width="150"/>
                            <DataGridTextColumn Header="Miqdor" Binding="{Binding Quantity}" Width="100"/>
                            <DataGridTextColumn Header="Qaysi Ombardan" Binding="{Binding FromWarehouse}" Width="150"/>
                            <DataGridTextColumn Header="Qaysi Omborga" Binding="{Binding ToWarehouse}" Width="150"/>
                            <DataGridTextColumn Header="Sana" Binding="{Binding TransferDate, StringFormat=yyyy-MM-dd}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Provodka qo‘shish -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="76,5,0,5" Grid.ColumnSpan="2" Width="637">
                        <TextBox x:Name="tbTransferProductId" md:HintAssist.Hint="Mahsulot ID" Width="100" Margin="5"/>
                        <TextBox x:Name="tbTransferQuantity" md:HintAssist.Hint="Miqdor" Width="100" Margin="5"/>
                        <ComboBox x:Name="cbFromWarehouse" md:HintAssist.Hint="Qaysi Ombardan" Width="150" Margin="5"/>
                        <ComboBox x:Name="cbToWarehouse" md:HintAssist.Hint="Qaysi Omborga" Width="150" Margin="5"/>
                        <Button Content="Jo‘natish" Click="TransferProductButton_Click" Margin="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Page>