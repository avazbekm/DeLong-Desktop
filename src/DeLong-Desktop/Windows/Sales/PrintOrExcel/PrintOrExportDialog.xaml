<Window x:Class="DeLong_Desktop.Windows.Sales.PrintOrExcel.PrintOrExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeLong_Desktop.Windows.Sales.PrintOrExcel"
        mc:Ignorable="d"
        Title="Tanlov" Height="150" Width="300" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="{DynamicResource OtherBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Sotuvni qanday yakunlashni xohlaysiz?" FontSize="14" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Chop etish" Width="100" Background="{DynamicResource SelectedBackground}" BorderBrush="{DynamicResource SelectedBorderColor}" Margin="0,0,10,0" Click="PrintButton_Click" IsDefault="True"/>
            <Button Content="Excelga o‘tkazish" Width="140" Background="{DynamicResource SelectedBackground}" BorderBrush="{DynamicResource SelectedBorderColor}" Click="ExportButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
